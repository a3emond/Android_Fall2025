<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.IntentProject" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Dark colors -->
        <item name="colorPrimary">@color/btn_normal</item>
        <item name="colorPrimaryVariant">@color/btn_pressed</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Override default button style -->
        <item name="buttonStyle">@style/ThreeStateButton</item>
    </style>

    <style name="ThreeStateButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/button_3state</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
