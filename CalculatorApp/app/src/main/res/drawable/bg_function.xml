<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed state (slightly darker orange) -->
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#CC7A00"/> <!-- darker orange -->
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FF9500"/> <!-- normal orange -->
        </shape>
    </item>

</selector>
